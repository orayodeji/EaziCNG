                                            <p id='pd-txt'><%= phone.name.substring(0,18) %></p>
                                            <p id="ps-txt"><%= phone.price %></p>
                                        </div>

                                        <form action="" id="price-alert-form">
                                            <p id="paf-text">Notify me when:</p>
                                            <div id="input-flex">
                                                <div id="form-radio">
                                                    <input type="radio" id="fr-radio" name="price-drop" value="price drop">
                                                    <label for="male"  id="fr-radio-label">The price drops</label><br>
                                                    <input type="radio" id="fr-radio" name="price-drop" value="">
