</script>



  <script>
      const saveBtn = document.querySelector('button#save-btn')
      console.log(saveBtn)

      saveBtn.addEventListener('click', (e)=>{
          const endPoint = `/phones/${saveBtn.dataset.doc}`;

          fetch(endPoint, {
              method:'POST'
          })
          .then((response)=>{
              return response.json()
          })
          .then((data)=>{
              window.location.href=data.redirect
              console.log(data)
          })
          .catch((err)=>{
              console.log(err)
          })

      })

  </script>
