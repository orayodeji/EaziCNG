                                            </div>

                                            <button type="submit" id="paf-btn">Set Price Alert</button>
                                        </form>

                                    </div>
                                </div>
                            </div>


                            <div id="compare-box">
                                <a href="/add-to-compare/<%= phone._id %>"><button id="compare-btn"><i class="far fa-chart-bar"></i>Compare</button></a>
                            </div>

                        </div>
                    </div>

                    <div class="other-store-box">
                        <div class="osb-box">
                            <p id="osb-text">Price from other stores</p>
                        </div>

                        <% if(other) {%>
                            <div class="osp-box">
                                <div class="osp-img-box">
                                    <div id="rectangle"><%= other.discount %></div>

                                    <a href="/phones/<%= other._id %>">
                                        <img src="<%= other.img %>" id="osp-img-jpg"></a>
    
                                    
                                </div>

                                <div class="osp-details-box">
    
                                    <p id="obd-lists">Product: <span id="huncho"><%= other.name %></span></p>
    
                                    <p id="obd-lists">Price: <span id="huncho"><%= other.price %></span></p>


                                    <% if(other.vendor) { %>
                                            
                                        <img src="<%= other.vendor %>" alt="vendor-logo" id="osp-logo-img">
                                        <% } else { %>
                                            <img aria-describedby="caption-attachment-27644" id="osp-logo-img" src="https://cdn.freelogovectors.net/wp-content/uploads/2019/02/jumia-logo.png" alt="Jumia Logo png" width="380" height="84" title="Jumia Logo png image">
        
        
                                            <% } %>
    
    
                                    
                                </div>

                                <div class="osp-store-box">
                                    <a href="<%= other.url %>"><button id='osp-store-btn'><i class="fas fa-shopping-bag"></i> <p>Go to Store</p> <i class="fas fa-chevron-right "></i></button></a>
                                </div>
    
                            </div>

                        
                        <% } %>
                    
                    </div>

                 </div>
                 
            </div>
           
            
        </div>

        <div class="second-part">
            <div id="detail-features">
                <p id="dt-text">Key Feature</p>
                <ul id="sp-lists">
                    <% if(phone.features.length > 0) { %>

                        <% let newArray = phone.features.slice(0, 9) %>
                        <% newArray.forEach(feature =>{ %>
                            <li id="dtf-list"><%= feature.name %></li>

                       <% }) %>

                   <% } %>

                  
                </ul>
            </div>
            <div id="detail-spec">
                <p id="ds-text">Products Specifications</p>
                <ul id="sp-lists">
                    <% if(phone.specification.length > 0) { %>
                        <% let newArray = phone.specification.slice(0, 11) %>

                        <% newArray.forEach(spec =>{ %>
                            <li id="ds-list"><%= spec.name %></li>

                       <% }) %>
                   <% } %>
                </ul>
            </div>
        </div>

        <div class="third-part">
            <div id="recent-picks">
                <div class="recent-text">
                    <p id="recent-btxt">Recently Viewed</p>
                    <p id="recent-stxt"><span id='txt'>See All</span> <i class="fas fa-chevron-right"></i></p>
