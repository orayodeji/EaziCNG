                          <!--<div><img src="./img/playstore.jpg" alt="logo" id="detail-logo"></div>-->  
                      <!--<p id="detail-name"><%= phone.name %></p>-->     
                            <ul id= 'detail-details-ul'>
                                <% if(phone.details.length > 0) { %>
                                    <% let array = phone.details.slice(0, 10) %>
                                    <% array.forEach(detail =>{ %>
                                        <li id="detail-details-list"><%= detail.name %></li>

                                   <% }) %>
                               <% } %>
                            </ul>    
                            <a href="<%= phone.url %>"><button id='store-btn'><i class="fas fa-shopping-bag"></i> <p>Go to Store</p> <i class="fas fa-chevron-right "></i></button></a>
                            
                        </div>
                        <div class="detail-price-box">
                            <div id="price-history">
                                <p id="history-heading"><i class="fas fa-chart-line"></i>Price History</p>
                                <p id='price-label'>Now:</p>
                                <p id="main-price"><%= phone.price %></p>
                                <% if(phone.description) {%>
                                    <p id="price-history-heading"><%= phone.description.substring(0,500) %></p>


                                    <% } %>


                                <ul>
                                 <!--<li id="price-history-list">No Data</li>-->   
                                   

                                </ul>

                            </div>
                            <div id="save-alert-box"> 
                                <a href="/add-to-cart/<%= phone._id %>"> <button id="save-btn" data-doc="<%= phone._id %>"><i class="fas fa-heart pl"></i>Save</button></a>
                               
                                <a class="popup-form"><button id="alert-btn"><i class="fas fa-bell pl"></i>Price Alert</button></a>
                            </div>

                            <div class="hover_bkgr_fricc">
